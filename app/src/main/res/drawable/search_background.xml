<!-- res/drawable/searchview_background.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Cor de fundo -->
    <solid android:color="#FFFFFF" /> <!-- Altere para a cor desejada -->

    <!-- Borda -->
    <stroke
        android:width="1dp"
        android:color="#CCCCCC" /> <!-- Altere para a cor da borda desejada -->

    <!-- Cantos arredondados -->
    <corners android:radius="10dp" />

    <!-- Sombras internas (opcional) -->
    <padding
        android:left="8dp"
        android:right="8dp"
        android:top="4dp"
        android:bottom="4dp" />
</shape>
